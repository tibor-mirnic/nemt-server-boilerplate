  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug server",
      "args": ["${workspaceRoot}/server/run.ts"],
      "runtimeArgs": [
        "--nolazy",
        "-r",
        "ts-node/register"

      "type": "node",
      "request": "launch",
      "name": "Unit tests",
      "args": ["${workspaceRoot}/server/tests/unit/run.ts"],
      "runtimeArgs": [
        "--nolazy",
        "-r",
        "ts-node/register"
      ],
      "cwd": "${workspaceRoot}/server"
    }
  ]
}